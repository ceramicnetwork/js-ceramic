{
 "compilerOptions": {
   "module": "commonjs",
   "lib": ["dom", "es2017"],
   "target": "es6",
   "declaration": true,
   "noImplicitAny": true,
   "removeComments": true,
   "esModuleInterop": true,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "sourceMap": true,
   "baseUrl": "./packages",
   "paths": {
     "@ceramicnetwork/*": ["./*/"]
   }
 },
 "exclude": [
   "node_modules",
   "**/*.spec.ts",
   "**/*.test.ts"
 ],
 "references": [
   { "path": "./packages/ceramic-core" },
   { "path": "./packages/3id-did-resolver" },
   { "path": "./packages/ceramic-http-client" }
 ]
}
