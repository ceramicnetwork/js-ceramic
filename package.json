{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm ci && lerna bootstrap --hoist --ci",
    "test": "lerna run test",
    "build": "lerna run build",
    "docs": "mv docs/_config.yml . ; ./node_modules/.bin/typedoc --media ./docs/images --mode file --disableOutputCheck --out ./docs/api --readme ./docs/README.md --ignoreCompilerErrors --excludeExternals --excludePrivate --externalPattern '**/node_modules/**' --exclude '**/*.+(test).ts' --name 'Ceramic' .; mv _config.yml docs/.",
    "publish:next": "lerna publish --no-push --conventional-prerelease --dist-tag next",
    "publish:latest": "lerna publish --allow-branch master --conventional-graduate --create-release github",
    "lint": "lerna run lint",
    "clean": "rm -rf ./lib"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^3.8.3"
  }
}
