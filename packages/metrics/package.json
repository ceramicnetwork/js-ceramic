{
  "name": "@ceramicnetwork/metrics",
  "version": "1.0.0",
  "description": "Ceramic metrics instrumentation and exporters",
  "keywords": [
    "ceramic",
    "metrics",
    "utilities"
  ],
  "author": "Golda Velez <golda@3box.io>",
  "homepage": "",
  "license": "(Apache-2.0 OR MIT)",
  "directories": {
    "lib": "./lib"
  },
  "exports": {
    ".": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "scripts": {
