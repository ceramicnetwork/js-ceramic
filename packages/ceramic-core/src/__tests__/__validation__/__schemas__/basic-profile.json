{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BasicProfile",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "name",
      "maxLength": 150
    },
    "image": {
      "type": "string",
      "title": "image"
    },
    "description": {
      "type": "string",
      "title": "description",
      "maxLength": 420
    },
    "emoji": {
      "type": "string",
      "title": "emoji",
      "maxLength": 2
    },
    "background": {
      "type": "string",
      "title": "background"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "title": "birthDate"
    },
    "url": {
      "type": "string",
      "title": "url",
      "maxLength": 240
    },
    "gender": {
      "type": "string",
      "title": "gender",
      "maxLength": 42
    },
    "homeLocation": {
      "type": "string",
      "title": "homeLocation",
      "maxLength": 140
    },
    "residenceCountry": {
      "title": "residenceCountry",
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    },
    "nationalities": {
      "title": "nationality",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[A-Z]{2}$"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2}$"
          }
        }
      ]
    },
    "affiliations": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 140
      },
      "title": "affiliations"
    }
  }
}
